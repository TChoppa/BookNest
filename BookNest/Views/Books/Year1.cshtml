@{
    ViewBag.Title = "Image Gallery";
    ViewBag.PageTitle = "📚 Books 📚";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="card academic-title-card">
    <h4 class="mb-0 fw-bold text-center">
        YEAR - I
    </h4>
</div>
<br />
<br />
<div class="container-fluid">
    <div class="row g-4" id="imageRow"></div>
    <div class="row g-4" id="imageRow1"></div>
</div>

<style>
    .academic-title-card {
        display: flex;
        align-items: center;
        justify-content: center;
        /* Size control */
        padding: 14px 20px;
        width: 90%; /* responsive width */
        max-width: 420px; /* won't exceed 420px */
        margin: 1px auto; /* centers the card horizontally */
        min-height: auto;
        /* Visuals */
        border-radius: 16px;
        background: #ffffff;
        border: 1.5px solid #dbeafe;
        box-shadow: 0 6px 15px rgba(79, 70, 229, 0.08);
        user-select: none; /* Prevent text selection */
        outline: none; /* Remove focus caret */
    }

    .book-closed {
        position: relative;
        width: 265px;
        height: 296px;
        margin: auto;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 12px 25px rgba(0,0,0,0.3);
        transition: transform 0.3s ease;
        cursor: pointer;
        background: #fff;
    }

        .book-closed:hover {
            transform: rotateY(-10deg) scale(1.05);
        }

        .book-closed img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .book-spine {
        position: absolute;
        left: 0;
        top: 0;
        width: 12px;
        height: 100%;
        background: linear-gradient(to right, #888, #ccc);
    }

    .book-title {
        position: absolute;
        bottom: 0;
        width: 100%;
        text-align: center;
       /*  background: rgba(0,0,0,0.6); */
        color: #fff;
        font-size: 14px;
        font-weight: 600;
        padding: 6px 0;
    }
    .custmbtn {
        padding: 1px 24px;
        font-size: 16px;
        font-weight: 600;
        border-width: 4px;
        width: 253px;
        margin-left: 11px;
        margin-bottom: -6px;
        left: 15px;
    }
</style>

@section Scripts {
    <script>
        $(function () {

            const images = [
                { src: "/images/Maths-1.jpg", title: "Maths-1" },
                { src: "/images/Drawing-1.jpg", title: "Drawing" },
                { src: "/images/Physics-1.jpg", title: "Physics" },
                { src: "/images/ElecWiring-1.jpg", title: "ElectricalWiring" }
            ];

            let html = "";

            $.each(images, function (_, img) {
                html += `
                    <div class="col-12 col-sm-6 col-lg-3 d-flex justify-content-center">
                        <div class="book-closed">
                            <div class="book-spine"></div>
                            <img src="${img.src}">
                            <div class="book-title"><button type="button" class="btn btn-outline-primary  custmbtn"><i class="bi bi-plus fs-5 me-1"></i></button></div>
                        </div>
                    </div>`;
            });

            $("#imageRow").html(html);
        });
    </script>
}

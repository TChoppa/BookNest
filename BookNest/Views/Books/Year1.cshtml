@{
    ViewBag.Title = "Image Gallery";
    ViewBag.PageTitle = "📚 Books 📚";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>

    .academic-title-card {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 14px 20px;
        width: 90%;
        max-width: 420px;
        margin: 1px auto;
        border-radius: 16px;
        background: #ffffff;
        border: 1.5px solid #dbeafe;
        box-shadow: 0 6px 15px rgba(79, 70, 229, 0.08);
    }

    .branch-select-box {
        width: 90%;
        max-width: 420px;
        margin: auto;
    }

    .branch-center-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 45vh;
        transition: all .4s ease;
    }

    .branch-top-wrapper {
        min-height: auto;
        margin-top: 25px;
    }

    .select-arrow {
        position: absolute;
        right: 14px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
        color: #0066cc;
    }

    .book-closed {
        position: relative;
        width: 265px;
        height: 296px;
        margin: auto;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 12px 25px rgba(0,0,0,0.3);
    }

        .book-closed img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .book-spine {
        position: absolute;
        left: 0;
        top: 0;
        width: 12px;
        height: 100%;
        background: linear-gradient(to right, #888, #ccc);
    }

    .cart-controls {
        width: 260px;
        text-align: center;
    }

</style>

<div class="card academic-title-card">
    <h4 class="mb-0 fw-bold text-center">YEAR - I</h4>
</div>

<div id="branchWrapper" class="branch-center-wrapper">

    <div class="form-group mb-3 position-relative branch-select-box">

        <select id="selBranch" name="UserRole" class="form-control custom-select" required>
            <option value="" disabled selected hidden>-- Select Branch --</option>
            <option value="EEE">Electrical & Electronics</option>
            <option value="CSC">Computer Science</option>
            <option value="ECE">Electronics</option>
            <option value="CIV">Civil</option>
            <option value="MEC">Mechanical</option>
        </select>

        <i class="bi bi-chevron-down select-arrow"></i>

    </div>

</div>

<div class="container-fluid">
    <div class="row g-4" id="imageRow"></div>
</div>

@section Scripts {

    <script>

        $(function () {

            $('#selBranch').on('change', function () {
                debugger;
                $('#branchWrapper')
                    .removeClass('branch-center-wrapper')
                    .addClass('branch-top-wrapper');

                var selectedValue = $(this).val();

                $.ajax({
                    url: '/Books/GetYear1Books',
                    type: 'POST',
                    data: { branch: selectedValue , year :'YEAR - I' },

                    success: function (response) {

                        var books = response.result;
                        let html = "";

                        $.each(books, function (_, book) {

                            html += `
                            <div class="col-12 col-sm-6 col-lg-3 d-flex flex-column align-items-center">

                                <div class="book-closed">

                                    <div class="book-spine">
                                        <div>QTY: ${book.availableQuantity}</div>
                                    </div>

                                    <img src="${book.imageUrl}" alt="${book.title}">
                                </div>

                                <div class="cart-controls mt-2"
                                     data-id="${book.bookId}"
                                     data-title="${book.title}"
                                     data-qty="${book.availableQuantity}"
                                     data-imageurl="${book.imageUrl}"
                                     data-year="${book.year}">

                                    <button class="btn btn-success add-btn">ADD</button>

                                    <div class="qty-controls d-none">
                                        <button class="btn btn-outline-secondary minus">−</button>
                                        <span class="qty">1</span>
                                        <button class="btn btn-outline-secondary plus">+</button>
                                    </div>
                                </div>

                            </div>`;
                        });

                        $("#imageRow").html(html);
                    },
                    error: function () {
                    alert("Failed to load books");
                }
                            });



        });
                  let cart = {};

                  $(document).on("click", ".add-btn", function () {
                      const container = $(this).closest(".cart-controls");
                      const title = container.data("title");

                      cart[title] = 1;

                      $(this).addClass("d-none");
                      container.find(".qty-controls").removeClass("d-none");
                      var itemDetails =
                       {
                                 BookId: container.data("id"),
                                 Title: container.data("title"),
                                 ImageUrl: container.data("imageurl"),
                                 AvailableQuantity: container.data("qty"),
                                 Year: container.data("year"),
                                 Username: "guest"
                       };
                       $.ajax({
                          url: '/CartControllercs/AddToCart',
                          type: 'POST',
                          data: JSON.stringify(itemDetails),
                          contentType: "application/json",
                          success: function ()
                          {
                          console.log("Added to cart");
                           }
                           });



                  });

                  $(document).on("click", ".plus", function () {
                      const container = $(this).closest(".cart-controls");
                      const title = container.data("title");

                      cart[title]++;
                      container.find(".qty").text(cart[title]);
                         var itemDetails = {
                              BookId: container.data("id"),
                              Title: container.data("title"),
                              ImageUrl: container.data("imageurl"),
                              AvailableQuantity: container.data("qty"),
                              Year: container.data("year"),
                              Username: "guest"
                            };
                          $.ajax({
                                  url: '/CartControllercs/IncreaseQtyByOne',
                                  type: 'POST',
                                  data: JSON.stringify(itemDetails),
                                  contentType: "application/json",
                                  success: function () {
                                  console.log("Added to cart");
                  }
              });


                  });

                  $(document).on("click", ".minus", function () {
                      const container = $(this).closest(".cart-controls");
                      const title = container.data("title");

                      cart[title]--;

                      if (cart[title] <= 0) {
                          delete cart[title];
                          container.find(".qty-controls").addClass("d-none");
                          container.find(".add-btn").removeClass("d-none");
                      } else {
                          container.find(".qty").text(cart[title]);
                      }
        });

          });


    </script>

}

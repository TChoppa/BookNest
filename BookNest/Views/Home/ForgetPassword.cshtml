@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Gift Picker</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            min-height: 100vh;
            font-family: 'Segoe UI', system-ui, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #f0f4f8, #d9e6f2);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .gift-picker-wrapper {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 40px;
        }

        .play-text {
            font-size: 2rem;
            font-weight: 700;
            color: #003366;
            letter-spacing: 1px;
        }

        .card {
            background: #ffffff !important;
            border-radius: 16px;
            max-width: 600px;
            border: 1px solid #e0e0e0;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        }

        .card-header {
            background: #003366 !important;
            color: #ffffff;
            font-weight: 600;
            font-size: 1.2rem;
            text-align: center;
            border-radius: 16px 16px 0 0;
        }

        .form-control {
            background: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 10px 14px;
            color: #333;
        }

            .form-control::placeholder {
                color: #888;
            }

            .form-control:focus {
                background: #ffffff;
                border-color: #0066cc;
                box-shadow: 0 0 0 0.15rem rgba(0,102,204,0.25);
            }

        .btn-info {
            background: #0066cc;
            border: none;
            border-radius: 10px;
            color: #ffffff;
            font-weight: 600;
            padding: 10px 28px;
            transition: all 0.3s ease;
        }

            .btn-info:hover {
                background: #004c99;
                transform: translateY(-1px);
                box-shadow: 0 6px 18px rgba(0,0,0,0.2);
            }

        a {
            color: #0066cc;
            font-weight: 500;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        #msg {
            font-weight: 500;
            color: #cc0000;
        }

        .container {
            padding-top: 40px;
            padding-bottom: 40px;
        }

        @@media (min-width: 768px) {
            .col-md-6 {
                flex: 0 0 auto;
                width: 41%;
            }
        }

        /* Eye icon positioning */
        .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #666;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header">
                        CHANGE PASSWORD
                    </div>
                    <div><br /></div>
                    <div class="card-body">
                        <form id="forgetPasswordForm">
                            <div class="form-group mb-3">
                                <input type="text" id="UserName" name="UserName"
                                       class="form-control" placeholder="Username" required />
                            </div>

                            <!-- New Password with eye icon -->
                            <div class="form-group mb-3 position-relative">
                                <input type="password" id="NewPassword" name="Password"
                                       class="form-control" placeholder="New Password" required minlength="6" />
                                <span class="toggle-password" onclick="togglePassword('NewPassword','eyeIcon1')">
                                    <i class="bi bi-eye" id="eyeIcon1"></i>
                                </span>
                            </div>

                            <!-- Confirm Password with eye icon -->
                            <div class="form-group mb-3 position-relative">
                                <input type="password" id="ConfirmPassword" name="Password"
                                       class="form-control" placeholder="Confirm Password" required minlength="6" />
                                <span class="toggle-password" onclick="togglePassword('ConfirmPassword','eyeIcon2')">
                                    <i class="bi bi-eye" id="eyeIcon2"></i>
                                </span>
                            </div>

                            <div class="form-group mb-3">
                                <span id="msg"></span>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" id="btnLogin" class="btn btn-info">Change Password</button>
                            </div>
                        </form>
                        <div class="mt-2 text-center">
                            Return to Login ?
                            <a href="@Url.Action("Login", "Home")" id="btnLoginHide">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery & Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle password visibility
               function togglePassword(inputId, eyeIconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(eyeIconId);

            // Save cursor position
            const cursorPos = input.selectionStart;

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            }

            // Restore focus and cursor position
            input.focus();
            input.setSelectionRange(cursorPos, cursorPos);
        }


        $(document).ready(function () {
            function ForgetPasswordData() {
                return {
                    UserName: $("#UserName").val(),
                    NewPassword: $("#NewPassword").val(),
                    ConfirmPassword: $("#ConfirmPassword").val(),
                }
            }

            $("#forgetPasswordForm").on("submit", function (e) {
                e.preventDefault();
                $.ajax({
                    url: "/Home/ForgetPassword",
                    type: "POST",
                    data: ForgetPasswordData(),
                    success: function (response) {
                        if (response.success) {
                            $("#UserNameEmail").val("")
                            $("#NewPassword").val("")
                            $("#ConfirmPassword").val("")
                            alert(response.message);
                        } else {
                            $("#msg")
                                .removeClass("text-success")
                                .addClass("text-danger")
                                .text(response.message)
                                .stop(true, true)
                                .fadeIn(200)
                                .delay(4000)
                                .fadeOut(600);
                            $("#Email").focus();
                        }
                    },
                    error: function () {
                        alert("Error during registration.");
                    }
                });
            });
        });
    </script>

</body>
</html>

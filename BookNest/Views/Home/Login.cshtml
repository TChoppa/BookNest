@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Gift Picker</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* =======================
                               BACKGROUND
                            ======================= */
        body {
            min-height: 100vh;
            font-family: 'Segoe UI', system-ui, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #f0f4f8, #d9e6f2);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* =======================
                               HEADER
                            ======================= */
        .gift-picker-wrapper {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 40px;
        }

        .play-text {
            font-size: 2rem;
            font-weight: 700;
            color: #003366;
            letter-spacing: 1px;
        }

        /* =======================
                               CARD
                            ======================= */
        .card {
            background: #ffffff !important;
            border-radius: 16px;
            max-width: 600px;
            border: 1px solid #e0e0e0;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        }

        .card-header {
            background: #003366 !important;
            color: #ffffff;
            font-weight: 600;
            font-size: 1.2rem;
            text-align: center;
            border-radius: 16px 16px 0 0;
        }

        /* =======================
                               FORM CONTROLS
                            ======================= */
        .form-control {
            background: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 10px 14px;
            color: #333;
        }

            .form-control::placeholder {
                color: #888; /* visible placeholder */
            }

            .form-control:focus {
                background: #ffffff;
                border-color: #0066cc;
                box-shadow: 0 0 0 0.15rem rgba(0,102,204,0.25);
            }

        /* =======================
                               CUSTOM SELECT ARROW
                            ======================= */
        .custom-select {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            padding-right: 2rem; /* space for arrow */
        }

        .select-arrow {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            transition: transform 0.3s ease, color 0.3s ease;
            color: #0066cc;
            font-size: 1rem;
        }

        .custom-select.open + .select-arrow {
            transform: translateY(-50%) rotate(180deg);
            color: #004c99;
        }

        /* =======================
                               BUTTON
                            ======================= */
        .btn-info {
            background: #0066cc;
            border: none;
            border-radius: 10px;
            color: #ffffff;
            font-weight: 600;
            padding: 10px 28px;
            transition: all 0.3s ease;
        }

            .btn-info:hover {
                background: #004c99;
                transform: translateY(-1px);
                box-shadow: 0 6px 18px rgba(0,0,0,0.2);
            }

        /* =======================
                               LINKS
                            ======================= */
        a {
            color: #0066cc;
            font-weight: 500;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        /* =======================
                               MESSAGES
                            ======================= */
        #msg {
            font-weight: 500;
            color: #cc0000;
        }

        .container {
            padding-top: 40px;
            padding-bottom: 40px;
        }
        @@media (min-width: 768px) {
            .col-md-6 {
                flex: 0 0 auto;
                width: 41%;
            }
        }
    </style>
</head>
<body>

    <div class="gift-picker-wrapper">
        <h1 class="play-text"><span>BOOK NEST</span></h1>
    </div>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header">
                        SIGN-IN
                    </div>
                    <div><br /></div>
                    <div class="card-body">
                        <form id="registerForm">
                            <div class="form-group mb-3">
                                <input type="text" id="UserNameEmail" name="UserName"
                                       class="form-control" placeholder="Username/UserId" required minlength="3" maxlength="20" pattern="[A-Za-z0-9]+" />
                            </div>
                            <div class="form-group mb-3">
                                <input type="password" id="Password" name="Password"
                                       class="form-control" placeholder="Password" required minlength="6" />
                            </div>
                            <div class="form-group mb-3 text-end">
                                <a href="@Url.Action("ForgetPassword", "Home")">Forget Password ?</a>
                            </div>
                            <div class="form-group mb-3">
                                <span id="msg"></span>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" id="btnLogin" class="btn btn-info">Login</button>
                            </div>
                        </form>
                        <div class="mt-2 text-center">
                            Don't  you have an account ?
                            <a href="@Url.Action("Register", "Home")" id="btnRegisterHide">Register</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery & Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
               $(document).ready(function () {

           function RegisterData()
            {
                debugger;
                return {
                    UserNameEmail: $("#UserNameEmail").val(),
                    Password: $("#Password").val()
                }
            }
            $("#registerForm").on("submit" , function (e) {
                  e.preventDefault();
                    $.ajax({
                        url: "/Home/Login",
                        type: "POST",
                        data: RegisterData(),
                        success: function (response) {
                            debugger;

                            if (response.success) {
                                // $("#UserNameEmail").val("")
                                // $("#Password").val("")                    
                                alert(response.message);
                                 window.location.href = '@Url.Action("Dashboard", "Home")';
                            }
                            else {
                                debugger;
                                     $("#msg")
                                    .removeClass("text-success")
                                    .addClass("text-danger")
                                    .text(response.message)
                                    .stop(true, true)
                                    .fadeIn(200)
                                    .delay(4000)
                                    .fadeOut(600);
                                     $("#Email").focus();

                            }
                        },
                        error: function () {
                            alert("Error during Login.");
                        }
                    });
                });
        });

    </script>

</body>
</html>

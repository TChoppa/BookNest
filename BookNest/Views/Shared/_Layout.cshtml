@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Book Nest</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            margin: 0;
            font-family: "Segoe UI", system-ui, sans-serif;
            background: linear-gradient(135deg, #f1f5f9, #e0e7ff);
            overflow: hidden;
        }

        .layout-flex {
            display: flex;
            height: 100vh;
            width: 100vw;
        }

        /* Sidebar */
        #sidebar {
            width: 250px;
            min-width: 150px;
            max-width: 400px;
            background: linear-gradient(180deg, #1e293b, #0f172a);
            box-shadow: 4px 0 15px rgba(0,0,0,0.15);
            padding: 20px;
            display: flex;
            flex-direction: column;
            color: #fff;
            transition: left 0.3s ease;
            height: 100vh;
            overflow-y: auto;
        }

        #Title {
            height: 40px;
            border-bottom: 2px solid #cbd5e1;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
        }

        #sidebar .nav-link {
            color: #cbd5e1;
            padding: 10px 14px;
            border-radius: 12px;
            margin-bottom: 6px;
            transition: 0.25s;
        }

            #sidebar .nav-link:hover {
                background: rgba(255,255,255,0.08);
                color: #fff;
            }

            #sidebar .nav-link.active {
                background: linear-gradient(135deg, #6366f1, #4f46e5);
                color: #fff;
            }

        .nav-link.text-danger {
            color: #f87171 !important;
        }

        /* Divider */
        #divider {
            width: 5px;
            cursor: col-resize;
            background: #94a3b8;
        }

        /* Main Content */
        main.content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            background: #e2e8f0;
            overflow: hidden;
        }

        /* Header */
        .main-header {
            height: 66px;
            border-bottom: 2px solid #0f172a;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-weight: 600;
            font-size: 1.1rem;
            background: #e2e8f0;
        }

        .hamburger {
            display: none;
            font-size: 1.4rem;
            cursor: pointer;
        }

        .main-body {
            flex-grow: 1;
            overflow-y: auto;
            padding: 20px;
        }

        /* Arrow rotation */
        .nav-link[aria-expanded="true"] .arrow-icon {
            transform: rotate(180deg);
        }

        .arrow-icon {
            transition: transform 0.3s ease;
        }

        /* ================= MOBILE ================= */
        @@media (max-width: 768px) {
            .layout-flex {
                position: relative;
            }

            #sidebar {
                position: fixed;
                left: -260px;
                top: 0;
                height: 100%;
                z-index: 1000;
            }

                #sidebar.show {
                    left: 0;
                }

            #divider {
                display: none;
            }

            .hamburger {
                display: block;
            }
        }
    </style>
</head>

<body>
    <div class="layout-flex">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div id="Title">
                <h4>BOOK NEST</h4>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Dashboard", "Home")">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link d-flex justify-content-between align-items-center"
                       href="#"
                       id="categoriesToggle"
                       aria-expanded="false">
                        <span>
                            <i class="bi bi-book"></i> Categories
                        </span>
                        <i class="bi bi-chevron-down arrow-icon"></i>
                    </a>

                    <div id="catMenu" style="display:none;">
                        <!-- Books toggle -->
                        <a class="nav-link ms-3 d-flex justify-content-between align-items-center"
                           href="#"
                           id="book"
                           data-bs-toggle="collapse"
                           data-bs-target="#bookYears"
                           aria-expanded="false"
                           aria-controls="bookYears">
                            <span>Books</span>
                            <i class="bi bi-chevron-down arrow-icon"></i>
                        </a>

                        <div class="collapse ms-5" id="bookYears">
                            <a class="nav-link" href="@Url.Action("Year1", "Books")" id="year">Year 1</a>
                            <a class="nav-link" href="#">Year 2</a>
                            <a class="nav-link" href="#">Year 3</a>
                            <a class="nav-link" href="#">Year 4</a>
                        </div>
                    
                        @if (User.IsInRole("Faculty") || User.IsInRole("Librarian"))
                        {
                        <a class="nav-link ms-3" id="journals"
                           href="@Url.Action("Journals", "Category")">Journals</a>
                        }
@* 
                        <a class="nav-link ms-3" id="ClubHost"
                           href="@Url.Action("ClubHost", "Category")">ClubHost</a> *@
                    </div>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="#">
                        <i class="bi bi-gear"></i> ClubHost
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="bi bi-cart"></i>
                        Cart
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="#">
                        <i class="bi bi-gear"></i> Orders
                    </a>
                </li>
                @if (User.IsInRole("Librarian"))
                  {
                <li class="nav-item ">
                    <a class="nav-link" href="#">
                        <i class="bi bi-gear"></i> OrdersList
                    </a>
                </li>
                   }
                <li class="nav-item mt-5">
                    <a class="nav-link" href="#">
                        <i class="bi bi-gear"></i> Settings
                    </a>
                </li>

                <li class="nav-item mt-2">
                    <a class="nav-link text-danger" href="#">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Divider -->
        <div id="divider"></div>

        <!-- Main Content -->
        <main class="content">
            <div class="main-header">
                <span class="hamburger" id="menuToggle">
                    <i class="bi bi-list"></i>
                </span>
                <h5 id="pageTitle">@ViewBag.PageTitle</h5>
            </div>

            <div class="main-body">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        $(document).ready(function () {
            debugger;
           var roleid = '@ViewBag.roleId';
            var $categoriesToggle = $('#categoriesToggle');
            var $catMenu = $('#catMenu');

            /* Sidebar toggle (mobile) */
            $('#menuToggle').on('click', function () {
                $('#sidebar').toggleClass('show');
            });

            $('#year').on('click', function () {
                window.location.href = '@Url.Action("Year1", "Books")';
            });

            /* Categories toggle */
            $categoriesToggle.on('click', function (e) {
                e.preventDefault();
                const isOpen = $(this).attr('aria-expanded') === 'true';
                $catMenu.toggle(!isOpen);
                $(this).attr('aria-expanded', !isOpen);
                localStorage.setItem("catMenuOpen", !isOpen);
            });

            /* Fix arrow rotation for Books collapse */
            $('#bookYears').on('shown.bs.collapse', function () {
                $('#book').attr('aria-expanded', 'true');
            });

            $('#bookYears').on('hidden.bs.collapse', function () {
                $('#book').attr('aria-expanded', 'false');
            });

            /* Resizable Sidebar (desktop only) */
            let isResizing = false;
            const $divider = $('#divider');
            const $sidebar = $('#sidebar');

            $divider.on('mousedown', function () {
                if (window.innerWidth <= 768) return;
                isResizing = true;
                $('body').css('cursor', 'col-resize');
            });

            $(document).on('mousemove', function (e) {
                if (!isResizing) return;

                let newWidth = e.clientX;
                if (newWidth < 150) newWidth = 150;
                if (newWidth > 400) newWidth = 400;

                $sidebar.css('width', newWidth + 'px');
            });

            $(document).on('mouseup', function () {
                isResizing = false;
                $('body').css('cursor', 'default');
            });
        });
    </script>

    @RenderSection("Scripts", false)

</body>
</html>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Book Nest</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            margin: 0;
            font-family: "Segoe UI", system-ui, sans-serif;
            background: linear-gradient(135deg, #f1f5f9, #e0e7ff);
            overflow: hidden;
        }

        .layout-flex {
            display: flex;
            height: 100vh;
            width: 100vw;
        }

        #sidebar {
            width: 250px;
            background: linear-gradient(180deg, #1e293b, #0f172a);
            box-shadow: 4px 0 15px rgba(0,0,0,0.15);
            padding: 20px;
            display: flex;
            flex-direction: column;
            color: #fff;
            height: 100vh;
            overflow-y: auto;
        }

        #Title {
            height: 40px;
            border-bottom: 2px solid #cbd5e1;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
        }

        #sidebar .nav-link {
            color: #cbd5e1;
            padding: 10px 14px;
            border-radius: 12px;
            margin-bottom: 6px;
            transition: 0.25s;
        }

            #sidebar .nav-link:hover {
                background: rgba(255,255,255,0.08);
                color: #fff;
            }

            #sidebar .nav-link.active {
                background: linear-gradient(135deg, #6366f1, #4f46e5);
                color: #fff;
            }

        .nav-link.text-danger {
            color: #f87171 !important;
        }

        main.content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            background: #e2e8f0;
            overflow: hidden;
        }

        .main-header {
            height: 66px;
            border-bottom: 2px solid #0f172a;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-weight: 600;
            font-size: 1.1rem;
            background: #e2e8f0;
        }

        .hamburger {
            display: none;
            font-size: 1.4rem;
            cursor: pointer;
        }

        .main-body {
            flex-grow: 1;
            overflow-y: auto;
            padding: 20px;
        }

        .arrow-icon {
            transition: transform 0.3s ease;
        }

        .nav-link[aria-expanded="true"] .arrow-icon {
            transform: rotate(180deg);
        }

        #sidebar .nav-link.active {
            background: linear-gradient(135deg, #6366f1, #4f46e5);
            color: #fff;
        }

        @@media (max-width: 768px) {
            #sidebar {
                position: fixed;
                left: -260px;
                top: 0;
                z-index: 1000;
            }

                #sidebar.show {
                    left: 0;
                }

            .hamburger {
                display: block;
            }
        }
    </style>
</head>

<body>
    <div class="layout-flex">

        <!-- Sidebar -->
        <nav id="sidebar">
            <div id="Title">
                <h4>BOOK NEST</h4>
            </div>

            <ul class="nav flex-column">

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Dashboard", "Home")">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link d-flex justify-content-between align-items-center"
                       href="#"
                       id="categoriesToggle"
                       aria-expanded="false">
                        <span><i class="bi bi-book"></i> Categories</span>
                        <i class="bi bi-chevron-down arrow-icon"></i>
                    </a>

                    <div id="catMenu" style="display:none;">
                        <a class="nav-link ms-3 d-flex justify-content-between align-items-center"
                           href="#"
                           id="book"
                           data-bs-toggle="collapse"
                           data-bs-target="#bookYears"
                           aria-expanded="false">
                            <span>Books</span>
                            <i class="bi bi-chevron-down arrow-icon"></i>
                        </a>

                        <div class="collapse ms-5" id="bookYears">
                            <a class="nav-link" href="@Url.Action("Year1", "Books")">Year 1</a>
                            <a class="nav-link" href="#">Year 2</a>
                            <a class="nav-link" href="#">Year 3</a>
                            <a class="nav-link" href="#">Year 4</a>
                        </div>
                    </div>
                </li>

                <li class="nav-item"><a class="nav-link" href="#"><i class="bi bi-gear"></i> ClubHost</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("ViewCart", "CartControllercs")"><i class="bi bi-cart"></i> Cart</a></li>
                <li class="nav-item"><a class="nav-link" href="#"><i class="bi bi-box"></i> Orders</a></li>
                <li class="nav-item mt-5"><a class="nav-link" href="#"><i class="bi bi-gear"></i> Settings</a></li>
                <li class="nav-item mt-2"><a class="nav-link text-danger" href="#"><i class="bi bi-box-arrow-right"></i> Logout</a></li>

            </ul>
        </nav>

        <main class="content">
            <div class="main-header">
                <span class="hamburger" id="menuToggle">
                    <i class="bi bi-list"></i>
                </span>
                <h5>@ViewBag.PageTitle</h5>
            </div>

            <div class="main-body">
                @RenderBody()
            </div>
        </main>

    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        $(document).ready(function () {

            var currentUrl = window.location.pathname.toLowerCase();

            // Highlight active link
            $('#sidebar .nav-link').each(function () {
                var linkUrl = $(this).attr('href');

                if (linkUrl && currentUrl === linkUrl.toLowerCase()) {
                    $(this).addClass('active');

                    // If active link is under Books → keep menu open
                    if (currentUrl.includes("/books")) {
                        $('#catMenu').show();
                        $('#bookYears').addClass('show');
                        $('#categoriesToggle').attr('aria-expanded', 'true');
                        $('#book').attr('aria-expanded', 'true');
                    }
                }
            });

            // If not Books page → collapse
            if (!currentUrl.includes("/books")) {
                $('#catMenu').hide();
                $('#bookYears').removeClass('show');
                $('#categoriesToggle').attr('aria-expanded', 'false');
                $('#book').attr('aria-expanded', 'false');
            }

            // Categories toggle
            $('#categoriesToggle').click(function (e) {
                e.preventDefault();
                let isOpen = $(this).attr('aria-expanded') === 'true';
                $('#catMenu').toggle(!isOpen);
                $(this).attr('aria-expanded', !isOpen);
            });

            // Mobile toggle
            $('#menuToggle').click(function () {
                $('#sidebar').toggleClass('show');
            });

        });
    </script>


    @RenderSection("Scripts", false)
</body>
</html>
